<p id="notice"><%= notice %></p>

<h1>Active Taskets for <%= @user.email %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @taskets.each do |tasket| %>


      <tr>
        <td><%= tasket.name %></td>
        <td><%= link_to 'Show', tasket %></td>
        <td><%= link_to 'Edit', edit_tasket_path(tasket) %></td>
        <td><%= link_to 'Destroy', tasket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
 
</table>

<br>

<%= link_to 'New Tasket', new_tasket_path %>
